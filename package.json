{
  "name": "vuejs-masterclass-2024",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force",
    "lint": "eslint . --fix",
    "format": "prettier --write src/",
    "supabase:init": "supabase init",
    "supabase:start": "supabase start",
    "supabase:login": "supabase login",
    "supabase:link": "node --env-file=.env -e \"const { execSync } = require('child_process'); execSync('supabase link --project-ref ' + process.env.SUPABASE_PROJECT_REF, { stdio: 'inherit' });\"",
    "db:migrate:new": "supabase migration new",
    "db:reset": "supabase db reset --linked",
    "db:seed": "node --env-file=.env database/seed.js",
    "supabase:types": "node --env-file=.env -e \"const { execSync } = require('child_process'); execSync('npx supabase gen types --lang=typescript --project-id ' + process.env.SUPABASE_PROJECT_REF + ' --schema public > database/types.ts', { stdio: 'inherit' });\""
  },
  "dependencies": {
    "@supabase/supabase-js": "2.43.4",
    "@vueuse/core": "^11.2.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "iconify-icon": "^2.1.0",
    "lucide-vue-next": "^0.456.0",
    "pinia": "^2.2.4",
    "radix-vue": "^1.9.9",
    "tailwind-merge": "^2.5.4",
    "tailwindcss-animate": "^1.0.7",
    "vue": "^3.5.12",
    "vue-router": "^4.4.5"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.2.0",
    "@tsconfig/node20": "^20.1.4",
    "@types/node": "^20.17.0",
    "@vitejs/plugin-vue": "^5.1.4",
    "@vue/eslint-config-prettier": "^10.0.0",
    "@vue/eslint-config-typescript": "^14.1.1",
    "@vue/tsconfig": "^0.5.1",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.13.0",
    "eslint-plugin-vue": "^9.29.0",
    "npm-run-all2": "^7.0.1",
    "prettier": "^3.3.3",
    "supabase": "^1.219.2",
    "tailwindcss": "^3.4.14",
    "typescript": "~5.6.0",
    "unplugin-vue-router": "^0.10.8",
    "vite": "^5.4.10",
    "vue-tsc": "^2.1.6"
  },
  "packageManager": "pnpm@9.13.0+sha512.beb9e2a803db336c10c9af682b58ad7181ca0fbd0d4119f2b33d5f2582e96d6c0d93c85b23869295b765170fbdaa92890c0da6ada457415039769edf3c959efe"
}
