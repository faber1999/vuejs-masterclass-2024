{
  "name": "vuejs-masterclass-2024",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force",
    "lint": "eslint . --fix",
    "format": "prettier --write src/",
    "supabase:init": "supabase init",
    "supabase:start": "supabase start",
    "supabase:login": "supabase login",
    "supabase:link": "node --env-file=.env -e \"const { execSync } = require('child_process'); execSync('supabase link --project-ref ' + process.env.SUPABASE_PROJECT_REF, { stdio: 'inherit' });\"",
    "db:migrate:new": "supabase migration new",
    "db:reset": "supabase db reset --linked",
    "db:seed": "node --env-file=.env database/seed.js",
    "supabase:types": "node --env-file=.env -e \"const { execSync } = require('child_process'); execSync('npx supabase gen types --lang=typescript --project-id ' + process.env.SUPABASE_PROJECT_REF + ' --schema public > database/types.ts', { stdio: 'inherit' });\""
  },
  "dependencies": {
    "@formkit/vue": "^1.6.9",
    "@supabase/supabase-js": "^2.49.4",
    "@tanstack/vue-table": "^8.20.5",
    "@vueuse/core": "^12.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "iconify-icon": "^2.1.0",
    "lucide-vue-next": "^0.397.0",
    "pinia": "^2.2.6",
    "radix-vue": "^1.8.5",
    "reka-ui": "^2.2.0",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "vue": "^3.4.21",
    "vue-router": "^4.4.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.2.0",
    "@rushstack/eslint-patch": "^1.8.0",
    "@tsconfig/node20": "^20.1.4",
    "@types/node": "^20.17.0",
    "@vitejs/plugin-vue": "^5.1.4",
    "@vue/eslint-config-prettier": "^10.0.0",
    "@vue/eslint-config-typescript": "^14.1.1",
    "@vue/tsconfig": "^0.5.1",
    "autoprefixer": "^10.4.19",
    "eslint": "^9.13.0",
    "eslint-plugin-vue": "^9.29.0",
    "npm-run-all2": "^6.1.2",
    "prettier": "^3.3.3",
    "supabase": "^2.22.6",
    "tailwindcss": "^3.4.4",
    "typescript": "~5.7.2",
    "unplugin-auto-import": "^0.19.0",
    "unplugin-vue-components": "^0.27.3",
    "unplugin-vue-router": "^0.10.1",
    "vite": "^5.4.10",
    "vue-tsc": "^2.1.6"
  }
}
